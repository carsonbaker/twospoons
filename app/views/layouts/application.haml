!!!

%meta{ :charset => "utf-8" }/
%meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0"}/

<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
<!--[if lt IE 9]>
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
<![endif]-->

-# Always force latest IE rendering engine (even in intranet) & Chrome Frame
-# Remove this if you use the .htaccess
%meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
%meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
%title<>= [@title, "Two Spoons"].compact.join(" | ")
%link{href: "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css", rel: "stylesheet", integrity: "sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm", crossorigin: "anonymous"}
= stylesheet_link_tag 'application', :media => 'all'
<link href='https://fonts.googleapis.com/css?family=Nunito:400,700' rel='stylesheet' type='text/css'>

#spacer
#navvy.container
  .row.justify-content-center.outline.no-gutters.elevate.p-0.pb-3
    .col.pt-md-4
      %a{:href => "#menu-yummy"}
        #foods.nav-img
        Menu
    .col.pt-md-4
      %a{:href => "#order-now"}
        #order.nav-img
        .d-block.d-lg-none
          Order
        .d-none.d-lg-block
          Order Now
    .col.d-none.d-sm-block
      .sr-only= 'Two Spoons Logo'
      = image_tag '2sp-logo.png', :id => 'logo', :class => 'img-fluid p-lg-2 mt-lg-3', :alt => "Two Spoons Logo"
    .col.pt-md-4
      %a{:href => "#spots-to-buy"}
        #spots.nav-img
        .d-block.d-lg-none
          Spots
        .d-none.d-lg-block
          Where to Buy
    .col.pt-md-4
      %a{:href => "#about-us"}
        #about.nav-img
        About

  .d-block.d-sm-none.text-center.pt-4.outline
    %h1{:style => 'font-weight: 800; font-size: 2em; text-transform: uppercase'} Two Spoons
    %h3 Austin, Texas

%main.container
  .circle.d-none.d-sm-block
= yield

.container
  .row.justify-content-md-center
    = reg_layout do
      %br/
      %hr/
      %footer.text-center
        %small.text-muted
          == &copy; 2017 &ndash; #{Time.now.year} Two Spoons Food, LLC.
          %br/
      %br/
      %br/

:javascript
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-16910626-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
