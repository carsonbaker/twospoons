!!!
%html
  %head
    %meta{ :charset => "utf-8" }/
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0"}/

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    -# Always force latest IE rendering engine (even in intranet) & Chrome Frame
    -# Remove this if you use the .htaccess
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %title<>= [@title, "Two Spoons"].compact.join(" | ")
    %link{href: "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css", rel: "stylesheet", integrity: "sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm", crossorigin: "anonymous"}
    = stylesheet_link_tag 'application', :media => 'all'

  %body{:class => @page_class}

    .container
      .row.justify-content-md-center.outline.no-gutters.no-borbot

        = reg_layout do

          .row.justify-content-center
            %a{:href => '/'}
              .sr-only= 'Two Spoons Logo'
              = image_tag '2sp-carson.png', :id => 'logo', :class => 'img-fluid', :alt => "Two Spoons Logo"

          %br/

          %nav.navbar.navbar-expand.p-0
            %ul.navbar-nav.mx-auto
              %li.nav-item= link_to 'Menu', url_for(:about), :class => 'nav-link'
              %li.nav-item= link_to 'Order', url_for(:services), :class => 'nav-link'
              %li.nav-item= link_to 'Catering', url_for(:reports), :class => 'nav-link'
              %li.nav-item= link_to 'Where to Buy', url_for(:articles), :class => 'nav-link'
              %li.nav-item= link_to 'About & Contact', url_for(:contact), :class => 'nav-link'
              -#%li= link_to 'Client Login', '/client-login'

      %article
        = yield

      .row.justify-content-md-center
        = reg_layout do
          %br/
          %br/
          %hr/
          %footer.text-center
            %small.text-muted
              == &copy; 2017 &ndash; #{Time.now.year} Two Spoons Food, LLC.
              %br/

      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-16910626-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
